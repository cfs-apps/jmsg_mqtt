<PackageFile xmlns="http://www.ccsds.org/schema/sois/seds">
  <Package name="JMSG_RATE" shortDescription="JSON Discrete Message">
    <DataTypeSet>

      <!--***********************************-->
      <!--**** DataTypeSet:  Entry Types ****-->
      <!--***********************************-->
s     
      <!--***************************************-->
      <!--**** DataTypeSet: Command Payloads ****-->
      <!--***************************************-->

      <!--*****************************************-->
      <!--**** DataTypeSet: Telemetry Payloads ****-->
      <!--*****************************************-->
    
      <ContainerDataType name="Tlm_Payload" shortDescription="3 axis coordinates">
        <EntryList>
          <Entry name="X" type="BASE_TYPES/float"  />
          <Entry name="Y" type="BASE_TYPES/float"  />
          <Entry name="Z" type="BASE_TYPES/float"  />
        </EntryList>
      </ContainerDataType>

      
      <!--**************************************-->
      <!--**** DataTypeSet: Command Packets ****-->
      <!--**************************************-->


      <!--****************************************-->
      <!--**** DataTypeSet: Telemetry Packets ****-->
      <!--****************************************-->

     
      <ContainerDataType name="TlmMsg" baseType="CFE_HDR/TelemetryHeader">
        <EntryList>
          <Entry type="Tlm_Payload" name="Payload" />
        </EntryList>
      </ContainerDataType>


    </DataTypeSet>
    
    <ComponentSet>
      <Component name="Library">

        <!--***********************************-->
        <!--**** Component Set: Interfaces ****-->
        <!--***********************************-->
      
        <RequiredInterfaceSet>
                  
          <Interface name="JMSG_RATE_TLM" shortDescription="Software bus telemetry interface" type="CFE_SB/Telemetry">
            <GenericTypeMapSet>
              <GenericTypeMap name="TelemetryDataType" type="TlmMsg" />
            </GenericTypeMapSet>
          </Interface>

        </RequiredInterfaceSet>

        <!--***************************************-->
        <!--**** Component Set: Implementation ****-->
        <!--***************************************-->

        <Implementation>
          <VariableSet>
            <Variable type="BASE_TYPES/uint16" readOnly="true" name="JMsgRateTopicId"      initialValue="${CFE_MISSION/JMSG_RATE_PLUGIN_TOPICID}" />
          </VariableSet>
          <!-- Assign fixed numbers to the "TopicId" parameter of each interface -->
          <ParameterMapSet>          
            <ParameterMap interface="JMSG_RATE_TLM" parameter="TopicId" variableRef="JMsgRateTopicId" />
          </ParameterMapSet>
        </Implementation>
      </Component>
    </ComponentSet>
    
  </Package>
</PackageFile>
